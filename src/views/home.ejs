    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
  </head>
  <body>
    <div class="banner">
      <img
        src="image/decoration-2.svg"
        alt="Decoration Design"
        class="decoration-left-banner"
      />
      <div class="layout-banner">
        <div class="content-banner-1">
          <div class="header-menu-box">
            <div class="hamburger-menu" onclick="buttonHamburger();">
              <ion-icon name="menu-outline"></ion-icon>
            </div>
            <div class="layout-menu">
              <ul id="list-menu">
                <div
                  class="hamburger-menu hamburger-menu-close"
                  onclick="buttonHamburger();"
                >
                  <ion-icon name="close-outline"></ion-icon>
                </div>
                <li><a href="#" class="active">Home</a></li>
                <li><a href="#">Profile</a></li>
                <li><a href="#">Event</a></li>
                <li><a href="#">Contact</a></li>
              </ul>
              <% if (user) { %> 
                <!-- Syntak yg di komen di bawah adalah button profile, bisa digunakan ketika user sudah login -->
                <a href="/dashboard">
                  <div class="button-profil">
                    <span>Halo, <%= user.nama_panggilan %></span>
                    <div class="icon-social-media">
                      <ion-icon name="person"></ion-icon>
                    </div>
                  </div>
                </a>
              <% } else { %>
                <button class="button-sign"><a href="/signup">Undang</a></button>
              <% } %>
            </div>
          </div>
          <h1>
            Bangun<br />
            Rumah <font color="#DD3F4C">Tahfidz</font>
          </h1>
          <h1>
            Untuk Santri <br />
            <font color="#DD3F4C">Penghafal </font>Qur’an
          </h1>
          <p>
            Lahirkan generasi qurani penerus <br />
            bangsa dengan membangun Rumah Tahfidz
          </p>
          <div class="social-media-banner">
            <div class="layout-icon-social-media">
              <a href="https://www.instagram.com/handy.bonny/" target="_blank">
                <div class="icon-social-media">
                  <ion-icon name="logo-instagram"></ion-icon>
                </div>
              </a>
              <a
                href="https://web.facebook.com/officialhandybonny"
                target="_blank"
              >
                <div class="icon-social-media">
                  <ion-icon name="logo-facebook"></ion-icon>
                </div>
              </a>
              <a href="https://www.youtube.com/@HandyBonny" target="_blank">
                <div class="icon-social-media">
                  <ion-icon name="logo-youtube"></ion-icon>
                </div>
              </a>
              <a
                href="https://www.tiktok.com/@handybonnyofficial"
                target="_blank"
              >
                <div class="icon-social-media">
                  <ion-icon name="logo-tiktok"></ion-icon>
                </div>
              </a>
            </div>
            <div class="website-text-banner">
              <span>www.handybonny.com</span>
            </div>
          </div>
          <img
            src="image/papap.svg"
            alt="Foto Papap | Ustadz Handy Bonny"
            class="mobile-image-papap"
          />
        </div>
        <div class="content-banner-2">
          <div class="email-text-banner">
            <span>handy.bonny@gmail.com</span>
          </div>
          <img
            src="image/papap.svg"
            alt="Papap | Handy Bonny"
            class="papap-image"
          />
          <img
            src="image/decoration-3.svg"
            alt="Decoration Design"
            class="decoration-behind-papap"
          />
          <img
            src="image/decoration-1.svg"
            alt="Decoration Design"
            class="decoration-right-banner"
          />
        </div>
      </div>
    </div>

    <div class="register">
      <div class="box-register">
        <h2>Klik tombol registrasi di bawah ini untuk mendaftar program.</h2>
        <a href="#"><button>Registrasi</button></a>
        <img
          src="image/islamic-ornamen-1.svg"
          alt="Islamic Ornamen"
          class="islamic-ornamen-1"
        />
        <img
          src="image/islamic-ornamen-2.svg"
          alt="Islamic Ornamen"
          class="islamic-ornamen-2"
        />
      </div>
    </div>

    <div class="program">
      <img
        src="image/decoration-3.svg"
        alt="Decoration Design"
        class="content-program-decoration"
      />
      <img
        src="image/decoration-1.svg"
        alt="Decoration Design"
        class="program-decoration"
      />
      <img
        src="image/image-program.png"
        alt="Papap | Handy Bonny"
