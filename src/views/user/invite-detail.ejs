<%- include('../partials/header') %> <%- include('../partials/navbar') %>

<main class="w-full max-w-[1444px] mt-[60px] mx-auto">
  <section class="w-full p-6 flex flex-col items-center">
    <div
      class="w-full flex flex-col sm:flex-row sm:flex-wrap sm:max-w-[80%] items-start justify-center sm:items-center sm:my-5"
    >
      <h1 class="font-bold text-2xl md:text-3xl text-center text-green-700">
        <%= invitation.tema %>
      </h1>

      <div
        class="flex flex-row items-center gap-1 mt-2 sm:mt-0 sm:ml-5 whitespace-nowrap"
      >
        <a
          href="/invite/<%= invitation.id %>/edit"
          title="Edit"
          data-doc="${d.id}"
          class="w-[35px] h-[35px] flex items-center p-2 bg-green-100 hover:bg-green-400 text-green-500 hover:text-white rounded-xl transition-all duration-150"
        >
          <%- include('../svg/pen.ejs') %>
        </a>
        <a
          href="#"
          title="Hapus"
          data-doc="${d.id}"
          data-modal-target="popup-modal"
          data-modal-toggle="popup-modal"
          class="w-[35px] h-[35px] flex items-center p-2 bg-green-100 hover:bg-green-400 text-green-500 hover:text-white rounded-xl transition-all duration-150"
        >
          <%- include('../svg/trash.ejs') %>
        </a>
      </div>

      <div
        id="popup-modal"
        tabindex="-1"
        class="fixed top-0 left-0 right-0 z-50 hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full"
      >
        <div class="relative w-full h-full max-w-md md:h-auto">
          <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <button
              type="button"
              class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white"
              data-modal-hide="popup-modal"
            >
              <svg
                aria-hidden="true"
                class="w-5 h-5"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill-rule="evenodd"
                  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                ></path>
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
            <div class="p-6 text-center">
              <svg
                aria-hidden="true"
                class="mx-auto mb-4 text-gray-400 w-14 h-14 dark:text-gray-200"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <h3
                class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400"
              >
                Ingin menghapus undangan <%= invitation.tema  %>?
              </h3>
              <button
                id="delete-invitation"
                data-modal-hide="popup-modal"
                data-doc="<%= invitation.id %>"
                type="button"
                class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2"
              >
                Hapus
              </button>
              <button
                data-modal-hide="popup-modal"
                type="button"
                class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600"
              >
                Batal
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div
      title="Status"
      class="max-w-fit flex justify-center items-center gap-2 mx-auto my-5 py-1 px-3 bg-blue-800 rounded-xl"
    >
      <span
        class="inline-block w-[12px] h-[12px] bg-blue-400 rounded-full"
      ></span>
      <span id="status-pengajuan" class="text-blue-100">
        <%= invitation.status.toUpperCase() %>
      </span>
    </div>

    <table
      class="w-full sm:max-w-[600px] mx-auto rounded-lg overflow-hidden border outline outline-1 -outline-offset-1 outline-green-500"
    >
      <tbody>
        <tr>
          <td
            class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400 rounded-tl-lg"
          >
            <span class="font-semibold">Tema</span>
          </td>
          <td
            class="p-1 sm:p-3 border border-01 border-green-400 rounded-tr-lg"
          >
            <%= invitation.tema %>
          </td>
        </tr>
        <tr>
          <td
            class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400"
          >
            <span class="font-semibold">Waktu</span>
          </td>
          <td class="p-1 sm:p-3 border border-01 border-green-400">
            <%= invitation.waktu %>
          </td>
        </tr>
        <tr>
          <td
            class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400"
          >
            <span class="font-semibold">Lokasi</span>
          </td>
          <td class="p-1 sm:p-3 border border-01 border-green-400">
            <%= invitation.lokasi %>
          </td>
        </tr>
        <tr>
          <td
            class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400 sm:min-w-[150px]"
          >
            <span class="font-semibold">Link Lokasi Map</span>
          </td>
          <td class="p-1 sm:p-3 border border-01 border-green-400">
            <a
              href="<%= invitation.lokasi_map %>"
              target="_blank"
              class="inline-block w-full max-w-[180px] sm:max-w-[250px] md:max-w-[400px] whitespace-normal overflow-hidden text-ellipsis underline text-green-800"
              ><%= invitation.lokasi_map %></a
            >
          </td>
        </tr>
        <tr>
          <td
            class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400"
          >
            <span class="font-semibold">Audience</span>
          </td>
          <td class="p-1 sm:p-3 border border-01 border-green-400">
            <%= invitation.audience %>
          </td>
        </tr>
        <tr>
          <td
            class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400 rounded-bl-lg"
          >
            <span class="font-semibold">Contact Person</span>
          </td>
          <td
            class="w-full p-1 sm:p-3 border border-01 border-green-400 rounded-br-lg whitespace-nowrap overflow-hidden text-ellipsis"
          >
            <%= invitation.cp %>
          </td>
        </tr>
      </tbody>
    </table>
  </section>
</main>

<script>
  const deleteInvitation = document.querySelector('#delete-invitation');
  deleteInvitation.addEventListener('click', async (e) => {
    console.log(deleteInvitation.dataset.doc);

    try {
      const response= await fetch(`<%= endpoint %>/invite`,{
        method: 'DELETE',
        body: JSON.stringify({ id: deleteInvitation.dataset.doc }),
        headers: {'Content-Type': 'application/json'},
      });

      const data = await response.json();
      if (data.invitation) {
        location.assign('/invite');
      }
    } catch (err) {
      alert('ERROR:', err.message );
    };
  });
</script>

<%- include('../partials/footer') %>
