<%- include('../partials/header') %> <%- include('../partials/navbar') %>

<main class="w-full max-w-[1444px] mt-[60px] mx-auto">
  <section class="w-full p-6 flex flex-col">
    <div class="w-full flex flex-col sm:flex-row items-start justify-center sm:items-center sm:my-5">
      <h1 class="font-bold text-2xl md:text-3xl text-green-700">
        <%= invitation.tema %>
      </h1>

      <div class="flex flex-row items-center gap-1 mt-2 sm:mt-0 sm:ml-5 whitespace-nowrap">
        <a href="/invite/<%= invitation.id %>/edit" title="Edit" data-doc="${d.id}" class="w-[35px] h-[35px] flex items-center p-2 bg-green-100 hover:bg-green-400 text-green-500 hover:text-white rounded-xl transition-all duration-150">
          <%- include('../svg/pen.ejs') %>
        </a>
        <a href="#" title="Hapus" data-doc="${d.id}" class="w-[35px] h-[35px] flex items-center p-2 bg-green-100 hover:bg-green-400 text-green-500 hover:text-white rounded-xl transition-all duration-150">
          <%- include('../svg/trash.ejs') %>
        </a>
      </div>  
    </div>

    <div
      title="Status"
      class="max-w-fit flex justify-center items-center gap-2 mx-auto my-5 py-1 px-3 bg-blue-800 rounded-xl"
    >
      <span
        class="inline-block w-[12px] h-[12px] bg-blue-400 rounded-full"
      ></span>
      <span id="status-pengajuan" class="text-blue-100">
        <%= invitation.status.toUpperCase() %>
      </span>
    </div>

    <table
      class="w-full sm:max-w-[600px] mx-auto rounded-lg overflow-hidden border outline outline-1 -outline-offset-1 outline-green-500"
    >
      <tbody>
        <tr>
          <td class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400 rounded-tl-lg">
            <span class="font-semibold">Tema</span>
          </td>
          <td class="p-1 sm:p-3 border border-01 border-green-400 rounded-tr-lg">
            <%= invitation.tema %>
          </td>
        </tr>
        <tr>
          <td class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400">
            <span class="font-semibold">Waktu</span>
          </td>
          <td class="p-1 sm:p-3 border border-01 border-green-400">
            <%= invitation.waktu %>
          </td>
        </tr>
        <tr>
          <td class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400">
            <span class="font-semibold">Lokasi</span>
          </td>
          <td class="p-1 sm:p-3 border border-01 border-green-400">
            <%= invitation.lokasi %>
          </td>
        </tr>
        <tr>
          <td class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400 sm:min-w-[150px]">
            <span class="font-semibold">Link Lokasi Map</span>
          </td>
          <td class="p-1 sm:p-3 border border-01 border-green-400">
            <a href="<%= invitation.lokasi_map %>" target="_blank" class="inline-block w-full max-w-[180px] sm:max-w-[250px] md:max-w-[400px] whitespace-normal overflow-hidden text-ellipsis underline text-green-800"><%= invitation.lokasi_map %></a>
          </td>
        </tr>
        <tr>
          <td class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400">
            <span class="font-semibold">Audience</span>
          </td>
          <td class="p-1 sm:p-3 border border-01 border-green-400">
            <%= invitation.audience %>
          </td>
        </tr>
        <tr>
          <td class="p-1 sm:p-3 border bg-green-500 text-white border-01 border-green-400 rounded-bl-lg">
            <span class="font-semibold">Contact Person</span>
          </td>
          <td class="w-full p-1 sm:p-3 border border-01 border-green-400 rounded-br-lg whitespace-nowrap overflow-hidden text-ellipsis">
            <%= invitation.cp %>
          </td>
        </tr>
      </tbody>
    </table>
  </section>
</main>

<%- include('../partials/footer') %>
